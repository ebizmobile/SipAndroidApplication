<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/parent"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.eazibiz.sipandroidapplication.ReceiptActivity">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/firstLayOutStudName"
        android:layout_alignParentTop="true"
        android:layout_weight="0.7"
        >
        <EditText
            android:id="@+id/edt_hidden_id"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_10sdp"
            android:orientation="vertical"
            android:visibility="gone"
            android:layout_marginTop="@dimen/_1sdp"
            />
        <android.support.design.widget.TextInputLayout
            android:id="@+id/fMobileNoLayout"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_44sdp"
            android:paddingLeft="@dimen/_1sdp"
            android:layout_below="@+id/imageView"
            android:layout_centerHorizontal="true"
            android:weightSum="1">
        <EditText
            android:id="@+id/edt"
            android:layout_width="@dimen/_265sdp"
            android:layout_height="@dimen/_40sdp"
            android:layout_centerHorizontal="true"
            android:ems="10"
            android:textStyle="normal"
            android:textSize="@dimen/_14sdp"
            android:hint="Student Name"
            android:layout_weight="0.69" />
        </android.support.design.widget.TextInputLayout>
        <FrameLayout
            android:id="@+id/stdReceiptFrgId"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_130sdp"
            android:visibility="gone"
            android:layout_above="@+id/itemTypeEdit"
           >
        <ListView
            android:id="@+id/listview"
            android:visibility="gone"
            android:background="#d2d0d0"
            android:layout_marginLeft="@dimen/_1sdp"
            android:paddingLeft="@dimen/_5sdp"
            android:layout_width="@dimen/_265sdp"
            android:layout_height="@dimen/_130sdp"
            android:layout_weight="1"
            ></ListView>
        </FrameLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/secLayOutMobileNo"
        android:layout_marginTop="@dimen/_60sdp"
        android:layout_weight="0.5"
        >
        <android.support.design.widget.TextInputLayout
            android:id="@+id/fMobileNoLayout2"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_44sdp"
            android:paddingLeft="@dimen/_1sdp"
            android:layout_below="@+id/imageView"
            android:layout_centerHorizontal="true"
            >
        <EditText
            android:id="@+id/itemTypeEdit"
            android:layout_width="@dimen/_265sdp"
            android:layout_height="@dimen/_40sdp"
            android:layout_centerHorizontal="true"
            android:ems="10"
            android:textStyle="normal"
            android:textSize="@dimen/_14sdp"
            android:hint="Mobile No"
            android:layout_weight="0.38"
            />
    </android.support.design.widget.TextInputLayout>
        <FrameLayout
            android:id="@+id/frameLayoutMobile"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_130sdp"
            android:visibility="gone"
            >
            <ListView
                android:id="@+id/itemTypeList"
                android:visibility="gone"
                android:background="#d2d0d0"
                android:layout_marginLeft="@dimen/_1sdp"
                android:paddingLeft="@dimen/_5sdp"
                android:layout_width="@dimen/_265sdp"
                android:layout_height="@dimen/_130sdp"
                ></ListView>
        </FrameLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/_120sdp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/_5sdp"
            >
            <TextView
                android:id="@+id/headerTbl1"
                android:layout_width="@dimen/_54sdp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_3sdp"
                android:clickable="false"
                android:linksClickable="false"
                android:longClickable="false"
                android:paddingBottom="@dimen/_1sdp"
                android:paddingTop="@dimen/_1sdp"
                android:text="Date"
                android:textStyle="bold"
                android:textColor="#000000"
                android:textSize="13dip"
                android:paddingLeft="@dimen/_4sdp"
                android:gravity="left"/>
            <TextView
                android:id="@+id/headerTbl2"
                android:layout_width="@dimen/_60sdp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_1sdp"
                android:clickable="false"
                android:layout_alignParentRight="true"
                android:linksClickable="false"
                android:longClickable="false"
                android:paddingBottom="@dimen/_1sdp"
                android:paddingTop="@dimen/_1sdp"
                android:text="Month/Year"
                android:textStyle="bold"
                android:textColor="#000000"
                android:textSize="13dip"
                android:gravity="center"/>
            <TextView
                android:id="@+id/headerTbl3"
                android:layout_width="@dimen/_52sdp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_1sdp"
                android:clickable="false"
                android:layout_alignParentRight="true"
                android:linksClickable="false"
                android:longClickable="false"
                android:paddingBottom="@dimen/_1sdp"
                android:paddingTop="@dimen/_1sdp"
                android:text="Amount"
                android:textStyle="bold"
                android:textColor="#000000"
                android:textSize="13dip"
                android:gravity="center"/>
            <TextView
                android:id="@+id/headerTbl4"
                android:layout_width="@dimen/_52sdp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_1sdp"
                android:clickable="false"
                android:layout_alignParentRight="true"
                android:linksClickable="false"
                android:longClickable="false"
                android:paddingBottom="@dimen/_1sdp"
                android:paddingTop="@dimen/_1sdp"
                android:text="Paid"
                android:textStyle="bold"
                android:textColor="#000000"
                android:textSize="13dip"
                android:gravity="center"/>
            <TextView
                android:id="@+id/headerTbl5"
                android:layout_width="@dimen/_52sdp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_1sdp"
                android:clickable="false"
                android:layout_alignParentRight="true"
                android:linksClickable="false"
                android:longClickable="false"
                android:paddingBottom="@dimen/_1sdp"
                android:paddingTop="@dimen/_1sdp"
                android:text="Balance"
                android:textStyle="bold"
                android:textColor="#000000"
                android:textSize="13dip"
                android:gravity="center"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="@dimen/_1sdp"
            >
            <ListView
                android:id="@+id/invoiceDtlList"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                ></ListView>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>

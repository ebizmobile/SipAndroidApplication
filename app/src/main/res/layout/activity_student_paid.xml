<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/parent"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.eazibiz.sipandroidapplication.MainActivity">

    <LinearLayout
        android:layout_width="@dimen/_300sdp"
        android:layout_height="match_parent"
        android:gravity="center|top"
        android:layout_marginTop="@dimen/_10sdp"
        android:orientation="vertical"
        tools:ignore="UselessParent">

        <LinearLayout
            android:layout_width="@dimen/_300sdp"
            android:layout_height="@dimen/_45sdp"
            android:layout_marginTop="@dimen/_1sdp"
            android:orientation="horizontal" >
            <LinearLayout
                android:layout_width="@dimen/_290sdp"
                android:layout_height="@dimen/_45sdp"
                android:layout_marginTop="@dimen/_1sdp"
                android:orientation="horizontal"
                android:weightSum="1">

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/paidStudLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_44sdp"
                    android:paddingLeft="@dimen/_15sdp"
                    android:layout_below="@+id/imageView"
                    android:layout_centerHorizontal="true"
                    >
                    <EditText
                        android:id="@+id/paid_studName"
                        android:layout_width="@dimen/_290sdp"
                        android:layout_height="@dimen/_40sdp"
                        android:layout_centerHorizontal="true"
                        android:ems="10"
                        android:editable="false"
                        android:textStyle="bold"
                        android:textSize="@dimen/_14sdp"
                        android:focusable="false"
                        android:focusableInTouchMode="false"
                        android:hint="Student Name"
                        android:inputType="number"
                        android:layout_weight="0.38"/>
                </android.support.design.widget.TextInputLayout>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="@dimen/_300sdp"
            android:layout_height="@dimen/_45sdp"
            android:layout_marginTop="@dimen/_15sdp"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="@dimen/_290sdp"
                android:layout_height="@dimen/_45sdp"
                android:layout_marginTop="@dimen/_1sdp"
                android:orientation="horizontal"
                android:weightSum="1">

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/paidStudDisAmt"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_44sdp"
                    android:paddingLeft="@dimen/_15sdp"
                    android:layout_below="@+id/imageView"
                    android:layout_centerHorizontal="true"
                    >
                    <EditText
                        android:id="@+id/paid_invNo"
                        android:layout_width="@dimen/_290sdp"
                        android:layout_height="@dimen/_40sdp"
                        android:layout_centerHorizontal="true"
                        android:ems="10"
                        android:textStyle="bold"
                        android:textSize="@dimen/_14sdp"
                        android:hint="Invoice No"
                        android:focusable="false"
                        android:focusableInTouchMode="false"
                        android:inputType="number"
                        android:layout_weight="0.38"/>
                </android.support.design.widget.TextInputLayout>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="@dimen/_300sdp"
            android:layout_height="@dimen/_45sdp"
            android:layout_marginTop="@dimen/_15sdp"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="@dimen/_290sdp"
                android:layout_height="@dimen/_45sdp"
                android:layout_marginTop="@dimen/_1sdp"
                android:orientation="horizontal"
                android:weightSum="1">

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/paidStudInvAmt"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_44sdp"
                    android:paddingLeft="@dimen/_15sdp"
                    android:layout_below="@+id/imageView"
                    android:layout_centerHorizontal="true"
                    >
                    <EditText
                        android:id="@+id/paid_invAmt"
                        android:layout_width="@dimen/_290sdp"
                        android:layout_height="@dimen/_40sdp"
                        android:layout_centerHorizontal="true"
                        android:ems="10"
                        android:editable="false"
                        android:textStyle="bold"
                        android:textSize="@dimen/_14sdp"
                        android:focusable="false"
                        android:focusableInTouchMode="false"
                        android:textColorHint="#F6F6F6"
                        android:hint="Invoice Amount"
                        android:inputType="number"
                        android:layout_weight="0.38"/>
                </android.support.design.widget.TextInputLayout>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="@dimen/_300sdp"
            android:layout_height="@dimen/_45sdp"
            android:layout_marginTop="@dimen/_15sdp"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="@dimen/_290sdp"
                android:layout_height="@dimen/_45sdp"
                android:layout_marginTop="@dimen/_1sdp"
                android:orientation="horizontal"
                android:weightSum="1">

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/paidStudBalAmt"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_44sdp"
                    android:paddingLeft="@dimen/_15sdp"
                    android:layout_below="@+id/imageView"
                    android:layout_centerHorizontal="true"
                    >
                    <EditText
                        android:id="@+id/paid_balAmt"
                        android:layout_width="@dimen/_290sdp"
                        android:layout_height="@dimen/_40sdp"
                        android:layout_centerHorizontal="true"
                        android:ems="10"
                        android:editable="false"
                        android:textStyle="bold"
                        android:textSize="@dimen/_14sdp"
                        android:focusable="false"
                        android:focusableInTouchMode="false"
                        android:hint="Balance Amount"
                        android:inputType="number"
                        android:layout_weight="0.38"/>
                </android.support.design.widget.TextInputLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="@dimen/_300sdp"
            android:layout_height="@dimen/_45sdp"
            android:layout_marginTop="@dimen/_15sdp"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="@dimen/_290sdp"
                android:layout_height="@dimen/_45sdp"
                android:layout_marginTop="@dimen/_1sdp"
                android:orientation="horizontal"
                android:weightSum="1">

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/paidStudPaidAmt"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_44sdp"
                    android:paddingLeft="@dimen/_15sdp"
                    android:layout_below="@+id/imageView"
                    android:layout_centerHorizontal="true"
                    >
                    <EditText
                        android:id="@+id/paid_payAmt"
                        android:layout_width="@dimen/_290sdp"
                        android:layout_height="@dimen/_40sdp"
                        android:layout_centerHorizontal="true"
                        android:ems="10"
                        android:textStyle="bold"
                        android:textColor="#ff3f80"
                        android:textSize="@dimen/_14sdp"
                        android:hint="Amount To Pay"
                        android:focusable="false"
                        android:focusableInTouchMode="false"
                        android:inputType="number"
                        android:layout_weight="0.38"/>
                </android.support.design.widget.TextInputLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
